{
  "name": "markdown-resume",
  "version": "2.1.2",
  "description": "Turn a simple markdown document into a resume in HTML and PDF",
  "keywords": [
    "markdown",
    "html",
    "pdf",
    "resume",
    "cv",
    "node",
    "js"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/c0bra/markdown-resume-js.git"
  },
  "bugs": {
    "url": "https://github.com/c0bra/markdown-resume-js/issues"
  },
  "main": "src/markdown-resume.js",
  "bin": {
    "md2resume": "src/cli.js"
  },
  "files": [
    "templates",
    "src"
  ],
  "scripts": {
    "dev": "light-server -s . -w \"src/**,test/**,templates/** # src/cli.js -t standard test/fixtures/standard.md\"",
    "lint": "eslint ./src/ --fix",
    "prepublish": "npm run test",
    "dev": "mocha --watch",
    "pretest": "rimraf coverage/",
    "test": "nyc --reporter=html --reporter=text mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Brian Hann",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.3.4",
    "chalk": "^2.3.0",
    "cheerio": "^1.0.0-rc.2",
    "clean-css": "^4.1.9",
    "commander": "^2.9.0",
    "html-minifier": "^3.5.8",
    "html-pdf": "^2.0.1",
    "inliner": "^1.13.1",
    "less": "^2.6.1",
    "marked": "^0.3.12",
    "meow": "^4.0.0",
    "mustache": "^2.2.1",
    "nyc": "^11.4.1",
    "read-pkg": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "istanbul": "^0.4.2",
    "juice": "^4.2.2",
    "mocha": "^4.1.0",
    "rimraf": "^2.5.2",
    "sinon": "^4.1.4",
    "sinon-chai": "^2.8.0"
  }
}
